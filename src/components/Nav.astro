---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
---

<header class="lg:flex p-5 gap-5 sticky top-0 bg-white/95 backdrop-blur-md shadow-md z-50 border-b border-indigo-50 lg:justify-between">
  <Astronav>
    <div class="flex lg:w-1/2 justify-between items-center">
      <a href="#hero" class="text-2xl md:text-3xl font-bold text-indigo-600 hover:text-indigo-700 transition-colors">
        Louie's Leashes
      </a>
      <div class="block lg:hidden">
        <MenuIcon class="w-6 h-6 text-gray-800" />
      </div>
    </div>
    <MenuItems class="hidden lg:flex border-t border-indigo-50 lg:border-none">
      <ul class="flex flex-col lg:flex-row gap-4 lg:gap-12 mt-4 lg:mt-0 lg:justify-end items-center text-lg">
        <li>
          <a 
            href="#about" 
            class="text-gray-700 hover:text-indigo-600 font-medium transition-colors relative after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 hover:after:w-full after:bg-indigo-600 after:transition-all"
          >
            About
          </a>
        </li>
        <li>
          <a 
            href="#features" 
            class="text-gray-700 hover:text-indigo-600 font-medium transition-colors relative after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 hover:after:w-full after:bg-indigo-600 after:transition-all"
          >
            Features
          </a>
        </li>
        <li>
          <a 
            href="#order" 
            class="bg-indigo-600 text-white px-6 py-3 rounded-full font-medium hover:bg-indigo-700 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-200 ease-out"
          >
            Order Now
          </a>
        </li>
      </ul>
    </MenuItems>
  </Astronav>
</header>

